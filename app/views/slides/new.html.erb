<h1>Create a slide</h1>

<div class="slide-form">
	<%= form_for @slide do |f| %>
	  <%= render 'shared/error_messages', model: @slide %>
	  <%= f.label :name %>
	  <%= f.text_field :name %>

	  <%= f.label :description %>
	  <%= f.text_area :description %>

	  <%= f.fields_for :photos, @slide.photos.build do |p| %>
	 	<% end %>

	  <%= f.submit "Create Slide" %>
	<% end %>
</div>