<div class="container center">
  <div class="columns">
    <div class="logo">
      <h1>InstaSlide</h1>
    </div>
      <div class="tagline-line"></div>
      <h3 class="tagline">beautiful, customizable slide shows.</p>
      <div class="tagline-line"></div>
  </div>
  <div class="omniauth">
    <% unless signed_in? %>
      <p class="sign-in">Sign in with</p>
    <% end %>
    <div class="facebook provider">
  	  <% if facebook_token? %>
        <%= image_tag "grey-facebook.png", size: "50x50", alt: "signed in with facebook" %>
      <% else %>
        <%= link_to image_tag("facebook-logo.jpg", alt: "facebook", size: "50x50"), '/auth/facebook'%>
      <% end %>
    </div>

    <div class="instagram provider">
      <% if instagram_token? %>
        <%= image_tag "grey-instagram.png", size: "50x50", alt: "signed in with instagram" %>
      <% else %>
        <%= link_to image_tag("instagram-logo.png", alt: "instagram", size: "50x50"), '/auth/instagram' %>
      <% end %>
    </div>

    <div class="flickr provider">
    <% if flickr_token? %>
      <%= image_tag "grey-flickr.png", alt: "signed in with flickr", size: "50x50" %>
    <% else %>
      <%= link_to image_tag("flickr-logo.png", alt: "flickr", size: "50x50"), '/auth/flickr' %>
    <% end %>
    </div>
  </div>
<%= link_to "create a slide", new_slide_path, class: "slide-button auth-button" %>
<% if signed_in? %>
  <%= link_to "signout", signout_path, method: :delete %>
<% end %>
</div>


